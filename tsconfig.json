{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["illuminate/utils/*"],
      "~/*": ["*"],
      "helpers": ["helpers"],
      "types": ["types"]
    },
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": false
  },
  "exclude": ["node_modules", "cli.ts"]
}
