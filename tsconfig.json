{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2021", "dom"],
    "module": "esnext",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["core/utils/*"],
      "~/*": ["*"],
      "types": ["types"]
    },
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": false,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "tests"]
}
